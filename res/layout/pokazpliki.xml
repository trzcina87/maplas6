<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Anuluj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikianuluj"
            android:layout_weight="3"
            android:textSize="12dp"
            android:height="60dp" />

        <Button
            android:text="Zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikizapisz"
            android:layout_weight="2"
            android:textSize="12dp"
            android:height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Wyczyść"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikiwyczysc"
            android:layout_weight="1"
            android:textSize="12dp"
            android:height="60dp" />

        <Button
            android:text="Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikidownload"
            android:layout_weight="1"
            android:textSize="12dp"
            android:height="60dp" />

        <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikiupload"
            android:layout_weight="1"
            android:textSize="12dp"
            android:height="60dp" />

        <Button
            android:text="Usun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokazplikiusun"
            android:layout_weight="1"
            android:textSize="12dp"
            android:height="60dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:id="@+id/scview"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/spisplikow"
            android:background="@android:color/white" />
    </ScrollView>

</LinearLayout>