<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:text="Folder z mapami"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/foldermapyedittext"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:text="Download URL"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/downloadurl"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:text="Upload URL"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/uploadurl"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:text="Download Uzytkownik"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/downloaduser"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:text="Download Haslo"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/downloadpass"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>